<h1>所有文章</h1>
<%= link_to '新建文章',new_page_path %>
<table>
  <tr>
    <th>标题：</th>
    <th>内容：</th>
    <th>所属分类：</th>
    <th colspan="2"></th>
  </tr>
  <% @pages.each do |page| %>
    <tr>
    <td><%= page.title %></td>
    <td><%= page.content %></td>
    <td></td>
    <td><%= link_to '查看', page_path(page) %></td>
    <td><%= link_to '编辑', edit_page_path(page) %></td>
    <td><%= link_to '删除', page_path(page),
      method: :delete, data: { confirm: '确定删除吗?' } %></td>
  </tr>
<% end %>
</table>
